# اسم سير العمل الذي سيظهر في قسم Actions
name: Python CI Pipeline

# متى يتم تشغيل هذا الإجراء
on:
  push:
    branches: [ main ] # عند الدفع إلى الفرع الرئيسي
  pull_request:
    branches: [ main ] # عند عمل طلب دمج للفرع الرئيسي

# المهام التي سيتم تنفيذها
jobs:
  build-and-test:
    # سيتم تشغيل المهمة على أحدث نسخة من أوبنتو
    runs-on: ubuntu-latest

    # خطوات التنفيذ بالترتيب
    steps:
      # 1. تحميل نسخة من الكود الخاص بك
      - name: Check out repository code
        uses: actions/checkout@v4

      # 2. إعداد بيئة عمل بايثون بالإصدار الذي تريده
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      # 3. تثبيت المكتبات اللازمة (من ملف requirements.txt وأدوات الفحص)
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install ruff black pytest

      # 4. فحص جودة الكود باستخدام ruff (بديل سريع لـ flake8)
      - name: Lint with ruff
        run: ruff check .

      # 5. التأكد من تنسيق الكود باستخدام black
      - name: Check formatting with black
        run: black --check .

      # 6. تشغيل الاختبارات للتأكد من أن كل شيء يعمل
      # (يفترض أن لديك مجلد tests يحتوي على ملفات الاختبار)
      - name: Run tests with pytest
        run: pytest
